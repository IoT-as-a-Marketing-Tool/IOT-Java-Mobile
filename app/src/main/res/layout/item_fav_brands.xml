<!--        android:textSize="15sp"-->
<!--        app:layout_constraintStart_toEndOf="@+id/porterShapeImageView"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textView" />-->
    <TextView
        android:id="@+id/fav_brand_desc"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:text="Subway Supermarket, CMC"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/fav_brand_logo"
        app:layout_constraintTop_toBottomOf="@id/fav_brand_name" />

    <Button
        android:id="@+id/remove_fav_brand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>