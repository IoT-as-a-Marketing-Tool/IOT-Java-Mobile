    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_favorite_border_24" />

    </LinearLayout>



    <ImageView
        android:id="@+id/brand_image"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/imagetwo" />

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Smooth Sundae"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="23sp" />
    <TextView
        android:id="@+id/brand_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Our ice cream simply tastes better because itâ€™s made better. With more cream, every bite is smooth, and dreamy."
        android:textColor="@color/grey"
        android:textFontWeight="600"
        android:textSize="15sp" />
