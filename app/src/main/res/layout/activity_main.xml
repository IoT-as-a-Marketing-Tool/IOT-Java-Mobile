                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
